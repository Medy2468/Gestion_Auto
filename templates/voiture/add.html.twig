<div class="row">
    <div class="container col-md-8">
        <div class="card">
            <div class="card-header text-center bg-dark text-white">Liste des voitures</div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead class="thead-dark text-center text-dark">
                    <tr>
                        <th scope="col">Identifiant</th>
                        <th scope="col">Matricule </th>
                        <th scope="col">Modele </th>
                        <th scope="col">Marque </th>
                        <th scope="col">Type voiture</th>
                        <th scope="col">Photo</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Description</th>
                        <th scope="col">Utilisateur</th> 
                        <th scope="col" colspan="2">Action</th>
                    </tr>
                    </thead>
                    {% for v in voitures %}
                    <tr class="text-center">
                        <th scope="row">{{ v.id }}</th>
                        <td>{{ v.matricule }}</td>
                        <td>{{ v.modele }}</td>
                        <td>{{ v.marque }}</td>
                        <td>{{ v.typeVoiture }}</td>
                        <td><img src="{{ asset('uploads/photoVoiture/' ~ v.getPhotoVoiture) }}" class="img-pri img-responsive" alt="73" width="50%"></td>
                        <td>{{ v.prix }} FCFA</td>
                        <td>{{ v.description }} </td>
                        <td>{{ v.users }}</td>
                        <td>...</td>
                        <td class="btn btn-outline-warning">
                            <i class="fas fa-th-list"> <a href="{{ path('voiture_edit', {'id': v.id}) }} ">Edit</a></i>
                        </td>
                        <td class="btn btn-outline-danger">
                            <i class="fas fa-trash"> <a href="{{ path('voiture_delete', {'id': v.id}) }}">Supr</a></i>
                        </td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </div>
    
    </div>
    