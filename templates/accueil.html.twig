        <a href={{ path('accueil')}} class="navbar-brand d-flex align-items-center border-end px-4 px-lg-5">
            <h2 class="m-0"><i class="fa fa-car text-primary me-2"></i>MD AUTO</h2>
        </a>
        <button type="button" class="navbar-toggler me-4" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <div class="navbar-nav ms-auto p-4 p-lg-0">
                <a href={{ path('accueil')}} class="nav-item nav-link active">Accueil</a>
                <a href={{ path('voiture')}} class="nav-item nav-link">Voiture</a>
                <div class="nav-item dropdown">
                    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Services</a>
                    <div class="dropdown-menu bg-light m-0">
                        <a href={{ path('annonce')}} class="dropdown-item">Annonce</a>
                        <a href={{ path('contrat')}} class="dropdown-item">Contrat</a>
